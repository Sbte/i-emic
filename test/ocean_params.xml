<!-- Ocean model parameters (mainly THCM) -->
<ParameterList name="Ocean">
  <!-- Maximum allowed number of iterations in linear solve before a new         -->
  <!-- preconditioner is requested -->
  <Parameter name="recomputeBound" type="int" value = "20"/>
  <!-- Parameters that affect THCM { -->
  <ParameterList name="THCM">
    <!-- a descriptive name to identify the settings -->
    <Parameter name="Problem Description" type="string" value="TEST: not sure what this is"/>
    <!-- western domain bound -->
    <Parameter name="Global Bound xmin" type="double" value="286"/>
    <!-- eastern domain bound -->
    <Parameter name="Global Bound xmax" type="double" value="350"/>
    <!-- southern domain bound -->
    <Parameter name="Global Bound ymin" type="double" value="10"/>
    <!-- northern domain bound -->
    <Parameter name="Global Bound ymax" type="double" value="74"/>
    <!-- periodic boundary conditions in x-direction -->
    <Parameter name="Periodic" type="bool" value="0"/>
    <!-- depth of the ocean -->
    <Parameter name="Depth hdim" type="double" value="4000"/>

    <!-- grid stretching in z-direction (defaults to 1.0)          -->
    <!-- I think the preconditioner does not handle this correctly,-->
    <!-- but in some cases it may work                             -->
    <Parameter name="Grid Stretching qz" type="double" value="1.0"/>
    <!-- global number of grid points in x-direction -->
    <Parameter name="Global Grid-Size n" type="int" value="32"/>
    <!-- global number of grid points in y-direction -->
    <Parameter name="Global Grid-Size m" type="int" value="32"/>
    <!-- global number of grid points in z-direction -->
    <Parameter name="Global Grid-Size l" type="int" value="16"/>

    <!-- topography:                                -->
    <!-- 0: from data                               -->
    <!-- 1: no land                                 -->
    <!-- others not tested, but this is 'itopo' in  -->
    <!-- THCM language                              -->
    <Parameter name="Topography" type="int" value="1"/>
    <!-- remove bottom profile? (flat in THCM)      -->
    <Parameter name="Flat Bottom" type="bool" value="0"/>
    <!-- read mask from a file in mkmask The filename is hard-coded in   -->
    <!-- topo.F90.                                                       -->
    <Parameter name="Read Land Mask" type="bool" value="1"/>g
    <!-- name of land mask file (assumed to be in topdir/data/mkmask/)   -->
    <Parameter name="Land Mask" type="string" value="mask_natl32"/>

	<!-- =============================================================== -->
	<!-- Flag enabling the coupling with an atmosphere within I-EMIC     -->
    <!--   0: standalone thcm, 1: accepting external atmosphere          -->
	<Parameter name="Coupled Atmosphere" type="int" value="1"/>
	<!-- =============================================================== -->

    <!-- Mixing parameter (vmix_GLB in THCM) -->
    <Parameter name="Mixing" type="int" value="1"/>
    <!-- Fred's convective adjustment (rho_mixing in THCM) -->
    <Parameter name="Rho Mixing" type="bool" value="0"/>
    <!-- Taper (tap in usr.F90) -->
    <Parameter name="Taper" type="int" value="1"/>
    <!-- Restoring Temperature-Profile (TRES in THCM) -->
    <!-- 0: non-restoring                             -->
    <!-- 1: restoring                                 -->
    <Parameter name="Restoring Temperature Profile" type="int" value="1"/>
    <!-- Restoring Salt-Profile (SRES in THCM)        -->
    <!-- 0: non-restoring                             -->
    <!-- 1: restoring                                 -->
    <Parameter name="Restoring Salinity Profile" type="int" value="1"/>
    <!-- Freshwater Forcing (ifw in THCM) -->
    <!-- 0: data, 1: idealized            -->
    <Parameter name="Freshwater Forcing" type="int" value="1"/>
    <!-- Levitus Temperature (ite in THCM) -->
    <!-- 0: data, 1: idealized, 2: coupled -->
    <Parameter name="Levitus T" type="int" value="2"/>
    <!-- Levitus Salt (its in THCM) -->
    <!-- 0: data, 1: idealized             -->
    <Parameter name="Levitus S" type="int" value="1"/>
    <!-- Wind Forcing (iza in THCM)       -->
    <!-- 0: data,                         -->
    <!-- 1: zonally averaged              -->
    <!-- 2: idealized                     -->
    <Parameter name="Wind Forcing" type="int" value="2"/>
    <!-- Free Surface (frs in THCM)       -->
    <Parameter name="Free Surface" type="bool" value="0"/>
    <!-- read starting guess from backup file XYZ. set this to "None" to start from 0 -->
    <!-- in case this is given, both the parameter values and the solution vector are -->
    <!-- read from a file as generated by the "Backup Interval" option                -->
    <Parameter name="Starting Solution File" type="string" value="None"/>
    <!-- store approximation at regular intervals (set to -X to disable)   -->
    <!-- (the value refers to the continuation parameter or dim.less time) -->
    <Parameter name="Backup Interval" type="double" value="0.0005"/>
    <!-- this can be used to write a series file in Xdmf (-X to disable).  -->
    <!-- This works for both time-integration and continuation             -->
    <!-- (the value refers to the continuation parameter or dim.less time) -->
    <Parameter name="Output Frequency" type="double" value="-1.0"/>
    <!-- Type of scaling applied to the linear systems.                            -->
    <!-- We currently support "None" and "THCM"                                    -->
    <!-- "None" is not really recomended.                                          -->
    <Parameter name="Scaling" type="string" value="THCM"/> 
    <!-- this can be used to have a new preconditioner computed after k time- or   -->
    <!-- continuation steps, or after k Newton solves. You probably want to set    -->
    <!-- the "Max Age of Prec" option                                              -->
    <!-- in solver_params.xml to -2 and the "Reuse Policy" to "Reuse". The reason  -->
    <!-- why we implement our own reuse strategy is that NOX tends to rebuild the  -->
    <!-- Preconditioner in the middle of a Newton-solve.                           -->
    <!-- If you do not want to reuse preconditioner, use the according options in  -->
    <!-- solver_params.xml ("Preconditioner Reuse Policy" = "Rebuild").            -->
    <!-- If you want to reuse the preconditioner indefinitely or control the age   -->
    <!-- by the according option in solver_params.xml, set this one to -2.         -->
    <Parameter name="Max Age Of Prec" type="int" value="-2"/>
    <!-- this can be - "None" (leave this to NOX, see solver_params.xml)           -->
    <!--             - "Newton Solve" (recompute after k Newton solves)            -->
    <!--             - "Step" (recompute after k time-/continuation steps)         -->
    <!-- here k is set by "Max Age Of Prec" above.                                 -->
    <Parameter name="Preconditioner Reuse Policy" type="string" value="None"/>
	<!-- Maximum allowed number of iterations in linear solve before a new         -->
	<!-- preconditioner is requested -->
	<Parameter name="recomputeBound" type="int" value = "10"/>
    <!-- set start values for the various THCM parameters.     -->
    <!-- currently only a small subset of them is available in -->
    <!-- Trilinos-THCM, but they can be added easily           -->
    <!-- The starting value in the "LOCA" or "Time Stepping"   -->
    <!-- lists overwrites the choice here                      -->
	<!-- usrc seems to overwrite them as well at this point... -->
    <ParameterList name="Starting Parameters">
      <!-- PAR(15), Salt forcing factor                         -->
      <!-- <Parameter name="Salinity Forcing" type="double" value="0.0"/> -->
	  <!-- PAR(16), Wind forcing factor                         -->
      <!-- <Parameter name="Wind Forcing" type="double" value="0.0"/>   -->
      <!-- PAR(17), Temperature forcing factor                  -->
      <!-- <Parameter name="Temperature Forcing" type="double" value="10.0"/> -->
      <!-- PAR(18), the Biot number                             -->
      <!-- <Parameter name="Nonlinear Factor" type="double" value="25.0"/> -->
      <!-- PAR(19), Salt/Wind/Temperature forcing factor           -->
      <!-- <Parameter name="Combined Forcing" type="double" value="1.0"/> -->
      <!-- convective adjustment -->
      <!-- <Parameter name="P_VC" type="double" value="5.0"/> -->
      <!-- mixing parameters -->
	  <!-- check whether vmix_GLB triggers the correct vmix_flag-->
      <!-- <Parameter name="SPL1" type="double" value="1.25"/> -->
      <!-- <Parameter name="SPL2" type="double" value="0.01"/> -->
    </ParameterList>

    <ParameterList name="Xdmf Output">
      <!-- currently only version 2.0 is implemented -->
      <Parameter name="Xdmf Version" type="string" value="2.0"/>
      <!-- filename for the output (.xmf and .h5 are appended) -->
      <Parameter name="File Name" type="string" value="thcm"/>
      <!-- write coordinates in real x/y/z positions rather than phi/theta/z -->
      <Parameter name="Store X/Y/Z Mesh" type="bool" value="1"/>
      <!-- If you choose "Store X/Y/Z Mesh", this determines the radius of the -->
      <!-- earth for visualization. The ocean has depth 1.                     -->
      <Parameter name="Earth-Radius for Visualization" type="double" value="10.0"/>
      <!-- select which components are to be stored -->
      <Parameter name="Store Velocity" type="bool" value="1"/>
      <Parameter name="Store Pressure" type="bool" value="1"/>
      <Parameter name="Store Temperature" type="bool" value="1"/>
      <Parameter name="Store Salinity" type="bool" value="1"/>
    </ParameterList>

  </ParameterList> <!-- } THCM -->
  
</ParameterList> <!-- } -->
