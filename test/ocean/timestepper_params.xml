<ParameterList name="Time stepper parameters">

  <Parameter name="adaptive time steps"  type="bool" value="true"/>

  <Parameter name="minimum time step"  type="double" value="1.0e-6"/>
  <Parameter name="maximum time step"  type="double" value="1.0"/>
  <Parameter name="time step increase" type="double" value="2.0"/>
  <Parameter name="time step decrease" type="double" value="2.0"/>

  <Parameter name="time step" type="double" value="1.0e-3"/>
  
  <Parameter name="maximum time (in y)" type="double" value="10.0"/>
  <Parameter name="theta"               type="double" value="0.75"/>

  <!-- set to -1 to run until end time -->
  <Parameter name="number of time steps"  type="int" value="10"/>
  
  <Parameter name="HDF5 output frequency" type="int" value="0"/>
  <Parameter name="Newton tolerance"      type="double" value="1e-4"/>

  <!-- Define the optimal interval for the amount of Newton iterations -->
  <Parameter name="minimum desired Newton iterations" type="int" value="4"/>
  <Parameter name="maximum desired Newton iterations" type="int" value="4"/>

 <!-- Upper bound for the Newton iterations, beyond this we restart -->
  <Parameter name="maximum Newton iterations" type="int" value="10"/>

</ParameterList>
