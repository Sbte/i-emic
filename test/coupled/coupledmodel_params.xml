<!-- ********************************* -->
<!-- Standard coupled model parameters -->
<!--                                   -->
<!-- ********************************* -->

<ParameterList name="CoupledModel parameters">

  <!-- Specify whether the coupled model should initialize with  -->
  <!-- old states (true) or with a trivial solution (false).     -->
  <!-- The sub-models maintain names for the input files.        -->
  <Parameter name="Use existing state" type="bool" value="false"/>

  <!-- Continuation parameter -->
  <!-- Options:  "Combined Forcing" -->
  <!--           "Solar Forcing"    -->
  <!--           "Salinity Forcing" -->
  <!--           "Wind Forcing"     -->
  <Parameter name="Continuation parameter" type="string" value="Combined Forcing"/>

  <!-- Select the solving and synchronization mode.                                    -->
  <!-- Synchronization depends on the solving method.                                  -->
  <!--  mode 'D': decoupled, off-diagonal blocks are ignored in the matrix and prec,   -->
  <!--            and synchronization of states occur at post processing.              -->
  <!--  mode 'C': coupled, off-diagonal blocks are included in the matrix and prec,    -->
  <!--            and synchronization of states occur at every RHS and J computation.  -->
  <Parameter name="Solving scheme" type="char" value="C"/>


</ParameterList>
