<!-- ************************ -->
<!-- Topo parameters  -->
<!-- ************************ -->

<ParameterList name="Topo parameters">
  
  <Parameter name="Number of mask files" type="int" value="3"/>

  <Parameter name="Mask file 0" type="string" value="topotest/test0"/>
  <Parameter name="Mask file 1" type="string" value="topotest/test1"/>
  <Parameter name="Mask file 2" type="string" value="topotest/test1"/>

  <Parameter name="Delta" type="double" value="0.0"/>

  <!-- M : determine operator from max(facA,facB)            -->
  <!-- N : determine operator from max(facA,facB) and scale  -->
  <!-- H : use both operators with a homotopy (recommended)  -->
  <Parameter name="Preconditioning type" type="char" value="M" />

  <Parameter name="Switch" type="double" value="0.98" />  

</ParameterList>
