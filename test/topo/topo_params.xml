<!-- ************************ -->
<!-- Topo parameters  -->
<!-- ************************ -->

<ParameterList name="Topo parameters">

  <!--  -->
  <Parameter name="Number of mask files" type="int" value="14"/>

  <Parameter name="Mask file 0" type="string"
	     value="test8x8x4/test1"/>
  <Parameter name="Mask file 1" type="string"
	     value="test8x8x4/test2"/>
  <Parameter name="Mask file 2" type="string"
	     value="test8x8x4/test3"/>

  <!-- Starting mask -->
  <Parameter name="Starting mask" type="int" value="0" />

  <Parameter name="Store everything" type="bool" value="false" />

  <!-- M : no preconditioning   -->
  <Parameter name="Preconditioning type" type="char" value="M" />

  <!-- Only when using custom monitor -->
  <Parameter name="Stopping tolerance homotopy" type="double" value="0.1"/>

  <!-- Predictor switch -->
  <Parameter name="Use predictor type (I)" type="bool" value="true" />  

</ParameterList>
